@model  MVC_StokTakip.Models.Entity.Kategoriler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Category</h2>
<div class="container">
   
    <form action="/Kategoriler/Ekle2/" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, null, new { @class = "text-danger" })
        <div class="form-group">
            <label>Category</label>
            <input type="text" name="Kategori" class="form-control" />
            @Html.ValidationMessageFor(x => x.Kategori, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>explanation</label>
            <textarea type="text" name="Aciklama" class="form-control"></textarea>
            @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button class="btn btn-success">Add Category</button>
        </div>

    </form>


</div>

